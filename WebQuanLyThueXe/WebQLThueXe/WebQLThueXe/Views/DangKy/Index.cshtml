@model WebQLThueXe.Models.Account


@{
    Layout = null;
}

<!DOCTYPE HTML>
<html>
<head>
    <title>Đăng ký</title>
    <script src="../../Assets/js/jquery.min.js"></script>
    <!-- Custom Theme files -->
    <link href="../../Assets/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <!-- for-mobile-apps -->
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Classy Login form Responsive, Login form web template, Sign up Web Templates, Flat Web Templates, Login signup Responsive web template, Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <!-- //for-mobile-apps -->
    <!--Google Fonts-->
    <link href='../../Assets//fonts.googleapis.com/css?family=Roboto+Condensed:400,700' rel='stylesheet' type='text/css'>
    <!--JS-->
    @*<script src="~/Scripts/js_signup.js"></script>*@
    <script>
        function validateForm() {
            var x = document.SignUpForm.fsdt.value;
            if (x == "") {
                alert("Sdt must be filled out");
                
                return false;
            }
        }
    </script>
</head>
<body>
    <header>
        <!--header start here-->
        <div class="header">
            <div class="header-main">
                <h1>Đăng ký</h1>
                <div class="header-bottom">
                    <div class="header-right w3agile">

                        <di v class="header-left-bottom agileinfo">

                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                <form name="SignUpForm" @*onsubmit="return validateForm()" action="Index" method="post"*@>
                                    <div>
                                        @Html.ValidationMessageFor(model => model.TenUser, "", new { @class = "text-danger" })
                                        @Html.EditorFor(model => model.TenUser, new { htmlAttributes = new { @class = "text", @placeholder = "Nhập họ và tên" } })
                                    </div>
                                    <div>
                                        @Html.ValidationMessageFor(model => model.IdA, "", new { @class = "text-danger" })
                                        @Html.EditorFor(model => model.IdA, new { htmlAttributes = new { @class = "text", @placeholder = "Tên đăng nhập" } })
                                    </div>
                                    <div>
                                        @Html.ValidationMessageFor(model => model.PassA, "", new { @class = "text-danger" })
                                        @Html.EditorFor(model => model.PassA, new { htmlAttributes = new { @class = "form-control", @placeholder = "Mật khẩu" } })
                                    </div>
                                    <div>
                                        @Html.ValidationMessageFor(model => model.ConfirmPassA, "", new { @class = "text-danger" })
                                        @Html.EditorFor(model => model.PassA, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập lại mật khẩu" } })
                                    </div>
                        @*<a href="/DangNhap">*@<input type="submit" style="   background-color: #04AA6D" value="Đăng ký">@*</a>*@


                        </form>
                    }
                            <br />
                            <a href="/DangNhap"><input type="submit" style="margin-top:5%; backdrop-filter:none; background-color:none" value="Đăng nhập"></a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </header>
    <!--header end here-->
    <footer>

        <div class="copyright">
            <p>©TTGo 2021. All rights reserved</p>
        </div>
        <!--footer end heere-->
    </footer>
</body>
</html>


<style>
.text-danger {
        color:red
    }
</style>